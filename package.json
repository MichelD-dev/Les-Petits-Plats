    "validate": "npm-run-all --parallel check-format lint",
    "postinstall": "husky install"
  },
  "license": "MIT",
  "packageManager": "yarn@3.2.1",
  "devDependencies": {
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "yarn-run-all": "^3.1.1"
  }
}
