{
  "name": "les_petits_plats",
  "version": "1.0.0",
  "description": "Site de recettes de cuisine",
  "main": "index.js",
  "author": "Michel DELAUNAY",
  "private": true,
  "scripts": {
    "sass": "sass -w ./style.scss:./css/style.css",
    "lint": "eslint .",
    "prettier": "prettier --ignore-path .gitignore **/*.{js,json,html,scss}",
